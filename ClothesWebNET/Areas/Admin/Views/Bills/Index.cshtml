@model IEnumerable<ClothesWebNET.Models.Bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- database jquery -->
<link rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/v/bs5/jq-3.6.0/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-html5-2.2.2/b-print-2.2.2/datatables.min.css" />
<div id="content" class="">

    <div class="content-main p-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Sản phẩm</li>
                <li class="breadcrumb-item active" aria-current="page">
                    Danh sách đơn hàng
                </li>
            </ol>
        </nav>
        <div class="table-responsive-sm">
            <table id="table-product" class="table" style="width: 100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Ngày tạo</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Phương thức thanh toán</th>
                        <th style="overflow: hidden; font-size: 0"></th>
                        <th style="overflow: hidden; font-size: 0"></th>
                    </tr>
                </thead>
                <tbody id="renderData">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.idBill</td>
                            <td>@item.idUser</td>
                            <td>@item.createdAt</td>
                            <td>@item.Total</td>
                            <td>@item.status</td>
                            <td>@item.Shipping</td>



                            <td>
                                <button type="button"
                                        class="btn btn-w-100 btn-detail btn-outline-info">
                                    Chi tiết
                                </button>
                            </td>
                            <td>
                                <button type="button"
                                        class="btn btn-w-100 btn-update btn-outline-primary">
                                    Cập nhật
                                </button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal-cus modal-update">
    <div class="modal__overplay mdu"></div>
    <div class="modal__body">
        <div class="modal__inner">
            <div class="cus-form">
                <h2>Cập nhật đơn hàng</h2>
                <form class="row g-3">
                    <!-- tên khách hàng -->
                    <div class="col-md-12">
                        <label for="validationDefault01" class="form-label">Khách hàng</label>
                        <input type="text"
                               class="form-control update-customer"
                               id="validationDefault01"
                               required />
                    </div>
                    <div class="col-md-12">
                        <label for="validationDefault01" class="form-label">Ngày tạo</label>
                        <input type="date"
                               class="form-control update-createAt"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- tổng tiền -->
                    <div class="col-md-12">
                        <label for="validationDefault01 " class="form-label">Giá bán (VD:200,000đ=200)</label>
                        <input type="number"
                               max="999"
                               class="form-control update-price"
                               id="validationDefault01"
                               required />
                    </div>
                    <!-- trạng thái -->
                    <div class="col-md-12">
                        <label for="validationDefault04" class="form-label">Trạng thái</label>
                        <select class="form-select update-status"
                                id="validationDefault04 "
                                required>
                            <option selected disabled value="">Chọn</option>
                            <option>Chờ xác nhận</option>
                            <option>Đã xác nhận</option>
                            <option>Đang giao</option>
                            <option>Từ chối</option>
                            <option>Hoàn thành</option>
                            <option>Đã hủy</option>
                        </select>
                    </div>
                    <!-- update at -->
                    <div class="col-md-12">
                        <label for="formFile validationDefault01 " class="form-label">Cập nhật lần cuối</label>
                        <input required
                               class="form-control update-updateAt"
                               type="date"
                               id="formFile validationDefault01" />
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Lưu lại</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/admin/jquery")

<script>
    
    $('.d-bill').addClass('active');
</script>

<!-- database jquery -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script type="text/javascript"
        src="https://cdn.datatables.net/v/bs5/jq-3.6.0/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-html5-2.2.2/b-print-2.2.2/datatables.min.js"></script>





@Scripts.Render("~/bundles/admin/donhang")